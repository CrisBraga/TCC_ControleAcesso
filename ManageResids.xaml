<Window x:Class="wpf_exemplo.ManageResids"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      d:DesignHeight="720"
      d:DesignWidth="1280"
      Title="Gerenciar Moradores"
      WindowStartupLocation="CenterScreen"
      WindowState="Maximized"
      Background="Black">

    <Grid>
        <!-- Fundo -->
        <Image Source="/src/imagem_tcc.png"
               Stretch="UniformToFill"
               Opacity="0.8">
            <Image.Effect>
                <BlurEffect Radius="15"/>
            </Image.Effect>
        </Image>

        <!-- Botão voltar -->
        <Button HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="20"
                Style="{StaticResource MaterialDesignIconButton}"
                Foreground="White"
                ToolTip="Voltar"
                Click="BtnVoltar_Click">
            <materialDesign:PackIcon Kind="ArrowLeft"
                                     Width="30"
                                     Height="30"/>
        </Button>

        <!-- Título -->
        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,20,0,0"
                   FontSize="26"
                   Foreground="White"
                   FontWeight="Bold"
                   Text="Editar Usuário"/>

        <!-- Conteúdo -->
        <Border Background="#AA000000"
                CornerRadius="30"
                Width="1200"
                Height="570"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="44,94,0,0"
                Effect="{StaticResource MaterialDesignShadowDepth4}">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="40">

                    <TextBox x:Name="TxtNome"
                             materialDesign:HintAssist.Hint="Nome completo"/>

                    <TextBox x:Name="TxtBloco"
                             materialDesign:HintAssist.Hint="Bloco"
                             Margin="0,10,0,0"/>

                    <TextBox x:Name="TxtApartamento"
                             materialDesign:HintAssist.Hint="Apartamento"
                             Margin="0,10,0,0"/>

                    <TextBox x:Name="TxtTelefone"
                             materialDesign:HintAssist.Hint="Telefone"
                             Margin="0,10,0,0"/>

                    <Separator Margin="0,20"/>

                    <TextBlock Text="Biometria"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,10"/>

                    <TextBox x:Name="TxtFinger1"
                             materialDesign:HintAssist.Hint="Fingerprint ID 1"/>

                    <TextBox x:Name="TxtFinger2"
                             materialDesign:HintAssist.Hint="Fingerprint ID 2"
                             Margin="0,10,0,0"/>

                    <CheckBox x:Name="ChkAtivo"
                              Content="Morador ativo"
                              Foreground="White"
                              Margin="0,20,0,0"/>

                    <Button Content="Salvar alterações"
                            Margin="400,30,400,0"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Click="BtnSalvar_Click"/>

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
