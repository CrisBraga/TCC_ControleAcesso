<Page x:Class="wpf_exemplo.ManageResids"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpf_exemplo"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="Gerenciar Moradores">

    <Grid>
        <Image Source="/src/imagem_tcc.png" Stretch="UniformToFill" Opacity="0.8">
            <Image.Effect>
                <BlurEffect Radius="15"/>
            </Image.Effect>
        </Image>

        <Button HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Margin="20"
                Style="{StaticResource MaterialDesignIconButton}" 
                Foreground="White"
                ToolTip="Voltar"
                Click="BtnVoltar_Click">
            <materialDesign:PackIcon Kind="ArrowLeft" Width="30" Height="30"/>
        </Button>

        <TextBlock Text="Gerenciar usuarios"
           HorizontalAlignment="Center"
           VerticalAlignment="Top"
           Margin="0,50,0,50"
           FontSize="26"
           Foreground="White"
           FontWeight="Bold"/>

        <Border Background="#AA000000" 
                CornerRadius="30"
                Width="500"
                Height="400"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Effect="{StaticResource MaterialDesignShadowDepth4}">


            <StackPanel VerticalAlignment="Center">

                
                <Button Content="Cadastrar Morador"
                        Height="50"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Foreground="White"
                        FontSize="22"
                        Margin="0,10"
                        Click="BtnRegister_Click"/>

                <Button Content="Editar Morador"
                        Height="50"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Foreground="White"
                        FontSize="22"
                        Margin="0,30"
                        Click="BtnEdit_Click"/>

                <Button Content="Excluir Morador"
                        Height="50"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Foreground="White"
                        FontSize="22"
                        Margin="0,10"
                        Click="BtnExclude_Click"/>

            </StackPanel>

        </Border>
    </Grid>
</Page>
