<Window x:Class="wpf_exemplo.ListaMoradores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Lista de Moradores"
        Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="Black">

    <Grid>
        <Image Source="/src/imagem_tcc.png" Stretch="UniformToFill" Opacity="0.6">
            <Image.Effect>
                <BlurEffect Radius="20"/>
            </Image.Effect>
        </Image>

        <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20"
                Style="{StaticResource MaterialDesignIconButton}"
                Foreground="White" ToolTip="Voltar" Click="BtnVoltar_Click">
            <materialDesign:PackIcon Kind="ArrowLeft" Width="35" Height="35"/>
        </Button>

        <Border Background="#AA000000" CornerRadius="30"
                Width="1000" Height="600"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Effect="{StaticResource MaterialDesignShadowDepth4}">

            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Moradores Cadastrados"
                           FontSize="28" FontWeight="Bold" Foreground="White"
                           HorizontalAlignment="Left" Margin="10,0,0,20"/>

                <Border Grid.Row="1" Background="#33FFFFFF" CornerRadius="30" Height="50" Margin="0,0,0,20">
                    <Grid>
                        <materialDesign:PackIcon Kind="Magnify" Width="25" Height="25" 
                                                 VerticalAlignment="Center" Margin="15,0,0,0" Foreground="LightGray"/>

                        <TextBox x:Name="TxtPesquisa"
                                 TextChanged="TxtPesquisa_TextChanged"
                                 materialDesign:HintAssist.Hint="Pesquisar por nome, bloco ou apartamento..."
                                 materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 BorderThickness="0"
                                 VerticalAlignment="Center"
                                 FontSize="16"
                                 Foreground="White"
                                 CaretBrush="White"
                                 Margin="50,0,15,0"/>
                    </Grid>
                </Border>

                <ListView x:Name="LvMoradores" Grid.Row="2"
                          Background="Transparent"
                          Foreground="White"
                          BorderThickness="0"
                          HorizontalContentAlignment="Stretch"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          MouseDoubleClick="LvMoradores_MouseDoubleClick">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#1FFFFFFF" CornerRadius="30" Padding="15,12" Margin="0,4,0,4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding NomeCompleto}" 
                                               Foreground="White" 
                                               FontSize="18" 
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"/>

                                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="Bl. " Foreground="#AAAAAA"/>
                                        <TextBlock Text="{Binding Bloco}" Foreground="White" FontWeight="Bold"/>
                                        <TextBlock Text=" - Ap. " Foreground="#AAAAAA" Margin="5,0,0,0"/>
                                        <TextBlock Text="{Binding Apartamento}" Foreground="White" FontWeight="Bold"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="4" 
                                               Text="{Binding Telefone}" 
                                               Foreground="#CCCCCC" 
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</Window>