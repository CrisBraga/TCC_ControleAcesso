<Window x:Class="wpf_exemplo.AddMoradorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Adicionar Morador"
        Height="720"
        Width="1280"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="Black">

    <Grid>

        <!-- Fundo -->
        <Image Source="/src/imagem_tcc.png"
               Stretch="UniformToFill"
               Opacity="0.85">
            <Image.Effect>
                <BlurEffect Radius="15"/>
            </Image.Effect>
        </Image>

        <!-- Botão voltar -->
        <Button HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="20"
                Style="{StaticResource MaterialDesignIconButton}"
                Foreground="White"
                ToolTip="Voltar"
                Click="BtnVoltar_Click">
            <materialDesign:PackIcon Kind="ArrowLeft"
                                     Width="30"
                                     Height="30"/>
        </Button>

        <!-- Título -->
        <TextBlock Text="Adicionar Morador"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,20,0,0"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="White"/>

        <!-- Card -->
        <Border Background="#AA000000"
                CornerRadius="30"
                Width="650"
                Height="580"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Effect="{StaticResource MaterialDesignShadowDepth4}">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="40">

                    <TextBox x:Name="TxtNome"
                             materialDesign:HintAssist.Hint="Nome completo"
                                             Foreground="White"/>

                    <TextBox x:Name="TxtBloco"
                             materialDesign:HintAssist.Hint="Bloco"
                             Margin="0,12,0,0"
                             Foreground="White"/>

                    <TextBox x:Name="TxtApartamento"
                             materialDesign:HintAssist.Hint="Apartamento"
                             Margin="0,12,0,0"
                             Foreground="White"/>

                    <TextBox x:Name="TxtTelefone"
                             materialDesign:HintAssist.Hint="Telefone"
                             Margin="0,12,0,0"
                             Foreground="White"/>

                    <Separator Margin="0,25"/>

                    <TextBlock Text="Biometria (opcional)"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="White"/>

                    <TextBox x:Name="TxtFinger1"
                             materialDesign:HintAssist.Hint="Fingerprint ID 1"
                             Foreground="White"/>

                    <TextBox x:Name="TxtFinger2"
                             materialDesign:HintAssist.Hint="Fingerprint ID 2"
                             Margin="0,12,0,0"
                             Foreground="White"/>

                    <CheckBox x:Name="ChkAtivo"
                              Content="Morador ativo"
                              IsChecked="True"
                              Foreground="White"
                              Margin="0,20,0,0"/>

                    <Button Content="Salvar Morador"
                            Margin="0,35,0,0"
                            Height="45"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Click="BtnSalvar_Click"/>

                </StackPanel>
            </ScrollViewer>
        </Border>

    </Grid>
</Window>
