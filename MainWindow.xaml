<Window x:Class="wpf_exemplo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Cadastrar Usuario" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="Black">


    <Grid>

        <Image Source="/src/imagem_tcc.png" Stretch="UniformToFill" Opacity="0.8">
            <Image.Effect>
                <BlurEffect Radius="15"/>
            </Image.Effect>
        </Image>

        <Border Background="#AA000000" 
                CornerRadius="30" 
                Width="500" 
                Height="500" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Effect="{StaticResource MaterialDesignShadowDepth3}">

            <StackPanel Margin="40"    
                        VerticalAlignment="Center">

                <materialDesign:PackIcon Kind="AccountCircle" 
                                         Width="60"
                                         Height="60"
                                         HorizontalAlignment="Center"
                                         Foreground="#FF1E3A5F"
                                         Margin="0,0,0,20"/>    

                <TextBlock Text="Acesso ao Sistema" 
                           FontSize="26" 
                           FontWeight="Bold" 
                           Foreground="#FF1E3A5F" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,40"/>

                <TextBox x:Name="txtUsuario"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Hint="Usuário"
                         FontSize="16"
                         Height="50"
                         Margin="0,0,0,20"
                         Foreground="White"/>

                <PasswordBox x:Name="txtSenha"
                             Style="{StaticResource MaterialDesignFloatingHintRevealPasswordBox}"
                             materialDesign:HintAssist.Hint="Senha"
                             FontSize="16"
                             Height="50"
                             Margin="0,0,0,5" 
                             Foreground="White"
                             CaretBrush="White"/>

                <Button Content="Esqueceu sua senha?"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        HorizontalAlignment="Right"
                        Height="30"
                        FontSize="12"
                        Foreground="LightGray"
                        Padding="0"
                        Margin="0,0,0,20"
                        Click="BtnEsqueceuSenha_Click"/>

                <Button Content="ENTRAR" Height="45"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="18"
                        Background="#FF1E3A5F" BorderBrush="#FF1E3A5F"
                        IsDefault="True"
                        Click="BtnEntrar_Click"/>

                <Button Content="Criar uma conta" 
                        Height="30"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Margin="0,20,0,0"
                        Foreground="Gray"
                        Click="BtnCadastrar_Click"/>

            </StackPanel>

        </Border>

        <materialDesign:Snackbar x:Name="msgErro"
                                 MessageQueue="{materialDesign:MessageQueue}"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Bottom"
                                 Background="#FF1E3A5F"
                                 Foreground="White"
                                 FontSize="22"
                                 Margin="0,0,0,30"/>

        <materialDesign:Snackbar x:Name="msgLogin"
                                 MessageQueue="{materialDesign:MessageQueue}"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Bottom" 
                                 Background="#FF1E3A5F"
                                 Foreground="White"
                                 FontSize="22"
                                 Margin="0,0,0,30"/>

    </Grid>
</Window>