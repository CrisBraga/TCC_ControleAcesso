<Window x:Class="wpf_exemplo.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_exemplo"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        Title="Controle de Acesso"
        Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized" 
        Background="Black">

    <materialDesign:DrawerHost x:Name="MainDrawerHost" 
                               IsLeftDrawerOpen="False">
        
        <materialDesign:DrawerHost.LeftDrawerContent>
            
            <Grid Width="280" 
                  Background="#FF1E3A5F">
                
                <StackPanel VerticalAlignment="Top">
                    
                    <Button x:Name ="MenuBtn" 
                            Style="{StaticResource MaterialDesignFlatButton}" 
                            Foreground="White" 
                            HorizontalAlignment="Left" 
                            Margin="28,30,0,10" 
                            Click="MenuBtn_click">
                        
                        <StackPanel Orientation="Horizontal">
                            
                            <materialDesign:PackIcon Kind="ViewDashboard" 
                                                     Margin="0,0,10,0" 
                                                     VerticalAlignment="Center"/>
                            
                            <TextBlock Text="Entrada / Saída" 
                                       FontSize="20"/>
                            
                        </StackPanel>
                        
                    </Button>

                    <Button x:Name="AddBtn" 
                            Style="{StaticResource MaterialDesignFlatButton}" 
                            Foreground="White" 
                            HorizontalAlignment="Left" 
                            Margin="10,15,0,0">
                        
                        <StackPanel Orientation="Horizontal">
                            
                            <materialDesign:PackIcon Kind="PersonPlus" 
                                                     Margin="0,0,10,0" 
                                                     VerticalAlignment="Center"/>
                            
                            <TextBlock Text="Adicionar moradores" 
                                       FontSize="20"/>
                            
                        </StackPanel>
                        
                    </Button>

                    <Button x:Name="GerenciarBtn" 
                            Style="{StaticResource MaterialDesignFlatButton}" 
                            Foreground="White" 
                            HorizontalAlignment="Left" 
                            Margin="10,10,0,0">
                        
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="WrenchSettings" 
                                                     Margin="0,0,10,0" 
                                                     VerticalAlignment="Center"/>
                            
                            <TextBlock Text="Gerenciar moradores" 
                                       FontSize="20"/>
                            
                        </StackPanel>
                        
                    </Button>

                    <Button x:Name="ExcluirBtn" 
                            Style="{StaticResource MaterialDesignFlatButton}" 
                            Foreground="White" 
                            HorizontalAlignment="Left" 
                            Margin="10,10,0,0">
                        
                        <StackPanel Orientation="Horizontal">
                            
                            <materialDesign:PackIcon Kind="BinCircle" 
                                                     Margin="0,0,10,0" 
                                                     VerticalAlignment="Center"/>
                            
                            <TextBlock Text="Excluir morador" 
                                       FontSize="20"/>
                            
                        </StackPanel>
                        
                    </Button>

                    <Button x:Name="menuRelatorioBtn" 
                            Style="{StaticResource MaterialDesignFlatButton}" 
                            Foreground="White" 
                            HorizontalAlignment="Left" 
                            Margin="10,10,0,0"
                            Click="MenuRelatorioBtn_Click">
                        
                        <StackPanel Orientation="Horizontal">
                            
                            <materialDesign:PackIcon Kind="FileChart" 
                                                     Margin="0,0,10,0" 
                                                     VerticalAlignment="Center"/>
                            
                            <TextBlock Text="Gerar relatório" FontSize="20"/>
                            
                        </StackPanel>
                        
                    </Button>

                    <Button x:Name="MenuMoradorBtn"
                            Style="{StaticResource MaterialDesignFlatButton}" 
                            Foreground="White" 
                            HorizontalAlignment="Left" 
                            Margin="10,10,0,0" 
                            Cursor="Hand"
                            Click="MenuMoradorBtn_Click">
                        
                        <StackPanel Orientation="Horizontal">
                            
                            <materialDesign:PackIcon Kind="AccountGroup" 
                                                     Margin="0,0,10,0" 
                                                     VerticalAlignment="Center"/>
                            
                            <TextBlock Text="Histórico de relatórios" 
                                       FontSize="20"/>
                            
                        </StackPanel>
                        
                    </Button>
                    
                </StackPanel>

                <Button x:Name="SairBtn" 
                        Style="{StaticResource MaterialDesignFlatButton}" 
                        Foreground="White" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Bottom" 
                        Margin="10,0,0,10" 
                        Click="SairBtn_Click">
                    
                    <StackPanel Orientation="Horizontal" >
                        
                        <materialDesign:PackIcon Kind="ExitRun" 
                                                 Margin="0,0,10,0" 
                                                 VerticalAlignment="Center"/>
                        
                        <TextBlock Text="Encerrar sessão" 
                                   FontSize="20"/>
                        
                    </StackPanel>
                    
                </Button>
                
            </Grid>
            
        </materialDesign:DrawerHost.LeftDrawerContent>

        <materialDesign:DialogHost Identifier="DialogoParaConfirmarSaida" 
                                   DialogTheme="Inherit" 
                                   x:Name="DialogoPrincipal">

            <materialDesign:DialogHost.DialogContent>
                <StackPanel Margin="20" MaxWidth="350">

                    <StackPanel Orientation="Horizontal" 
                                Margin="0,0,0,10">
                        
                        <materialDesign:PackIcon Kind="Logout" 
                                                 Width="30" 
                                                 Height="30" 
                                                 Foreground="White" 
                                                 VerticalAlignment="Center" 
                                                 Margin="0,0,10,0"/>
                        
                        <TextBlock Text="Encerrar sessão" 
                                   Foreground="White" 
                                   FontSize="20" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Text="Tem certeza que deseja encerrar a sessão?"
                   Foreground="White"
                   TextWrapping="Wrap"
                   FontSize="16"
                   Margin="0,0,0,30"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                    Foreground="White"
                    BorderBrush="White"
                    Content="CANCELAR"
                    Margin="0,0,10,0"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"/>

                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                    Background="#FF1E3A5F"
                    Foreground="White"
                    Content="SIM, SAIR"
                    Click="SairConfirmaBtn_Click"/>
                    </StackPanel>

                </StackPanel>
            </materialDesign:DialogHost.DialogContent>

            <Grid>
                
                <Image Source="/src/imagem_tcc.png" 
                       Stretch="UniformToFill" 
                       Opacity="0.8">
                    
                    <Image.Effect>
                        
                        <BlurEffect Radius="15"/>
                        
                    </Image.Effect>
                    
                </Image>
                
                <Frame x:Name="MainFrame" 
                       NavigationUIVisibility="Hidden" 
                       Margin="0,50,0,0" />
                
                <ToggleButton Style="{StaticResource MaterialDesignHamburgerToggleButton}" 
                              VerticalAlignment="Top" 
                              HorizontalAlignment="Left" 
                              Margin="10,10,0,0" 
                              Foreground="White" 
                              IsChecked="{Binding IsLeftDrawerOpen, ElementName=MainDrawerHost}"/>
                
            </Grid>
            
        </materialDesign:DialogHost>
        
    </materialDesign:DrawerHost>
    
</Window>