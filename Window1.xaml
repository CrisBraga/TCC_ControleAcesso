<Window x:Class="wpf_exemplo.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_exemplo"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        Title="Controle de Acesso"
        Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized" 
        Background="Black">

    <materialDesign:DrawerHost x:Name="MainDrawerHost" 
                               IsLeftDrawerOpen="False">

        <materialDesign:DrawerHost.LeftDrawerContent>

            <Grid Width="280" 
                  Background="#FF1E3A5F">

                <StackPanel VerticalAlignment="Top">

                    <Button x:Name ="MenuBtn" 
                            Style="{StaticResource MaterialDesignFlatButton}" 
                            Foreground="White" 
                            HorizontalAlignment="Left" 
                            Margin="28,30,0,10" 
                            Click="MenuBtn_click">

                        <StackPanel Orientation="Horizontal">

                            <materialDesign:PackIcon Kind="ViewDashboard" 
                                                     Margin="0,0,10,0" 
                                                     VerticalAlignment="Center"/>

                            <TextBlock Text="Entrada / Saída" 
                                       FontSize="20"/>

                        </StackPanel>

                    </Button>

                    <Button x:Name="AddBtn" 
                            Style="{StaticResource MaterialDesignFlatButton}" 
                            Foreground="White" 
                            HorizontalAlignment="Left" 
                            Margin="10,15,0,0"
                            Click="AddBtn_Click">

                        <StackPanel Orientation="Horizontal">

                            <materialDesign:PackIcon Kind="PersonPlus" 
                                                     Margin="0,0,10,0" 
                                                     VerticalAlignment="Center"/>

                            <TextBlock Text="Adicionar moradores" 
                                       FontSize="20"/>

                        </StackPanel>

                    </Button>

                    <Button x:Name="GerenciarBtn" 
                            Style="{StaticResource MaterialDesignFlatButton}" 
                            Foreground="White" 
                            HorizontalAlignment="Left" 
                            Margin="10,10,0,0"
                            Click="GerenciarBtn_Click">

                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="WrenchSettings" 
                                                     Margin="0,0,10,0" 
                                                     VerticalAlignment="Center"/>

                            <TextBlock Text="Gerenciar moradores" 
                                       FontSize="20"/>

                        </StackPanel>

                    </Button>

                    <Button x:Name="menuRelatorioBtn" 
                            Style="{StaticResource MaterialDesignFlatButton}" 
                            Foreground="White" 
                            HorizontalAlignment="Left" 
                            Margin="10,10,0,0"
                            Click="MenuRelatorioBtn_Click">

                        <StackPanel Orientation="Horizontal">

                            <materialDesign:PackIcon Kind="FileChart" 
                                                     Margin="0,0,10,0" 
                                                     VerticalAlignment="Center"/>

                            <TextBlock Text="Gerar relatório" FontSize="20"/>

                        </StackPanel>

                    </Button>

                    <Button x:Name="MenuHistoricoBtn"
                            Style="{StaticResource MaterialDesignFlatButton}" 
                            Foreground="White" 
                            HorizontalAlignment="Left" 
                            Margin="10,10,0,0" 
                            Cursor="Hand"
                            Click="MenuHistoricoBtn_Click">

                        <StackPanel Orientation="Horizontal">

                            <materialDesign:PackIcon Kind="AccountGroup" 
                                                     Margin="0,0,10,0" 
                                                     VerticalAlignment="Center"/>

                            <TextBlock Text="Histórico de relatórios" 
                                       FontSize="20"
                                       />

                        </StackPanel>

                    </Button>

                </StackPanel>

                <Button x:Name="SairBtn" 
                        Style="{StaticResource MaterialDesignFlatButton}" 
                        Foreground="White" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Bottom" 
                        Margin="10,0,0,10" 
                        Click="SairBtn_Click">

                    <StackPanel Orientation="Horizontal" >

                        <materialDesign:PackIcon Kind="ExitRun" 
                                                 Margin="0,0,10,0" 
                                                 VerticalAlignment="Center"/>

                        <TextBlock Text="Encerrar sessão" 
                                   FontSize="20"/>

                    </StackPanel>

                </Button>

            </Grid>

        </materialDesign:DrawerHost.LeftDrawerContent>

        <materialDesign:DialogHost Identifier="DialogoParaConfirmarSaida" 
                                   DialogTheme="Inherit" 
                                   x:Name="DialogoPrincipal">

            <materialDesign:DialogHost.DialogContent>
                <StackPanel Margin="20" MaxWidth="350">

                    <StackPanel Orientation="Horizontal" 
                                Margin="0,0,0,10">

                        <materialDesign:PackIcon Kind="Logout" 
                                                 Width="30" 
                                                 Height="30" 
                                                 Foreground="White" 
                                                 VerticalAlignment="Center" 
                                                 Margin="0,0,10,0"/>

                        <TextBlock Text="Encerrar sessão" 
                                   Foreground="White" 
                                   FontSize="20" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Text="Tem certeza que deseja encerrar a sessão?"
                   Foreground="White"
                   TextWrapping="Wrap"
                   FontSize="16"
                   Margin="0,0,0,30"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                    Foreground="White"
                    BorderBrush="White"
                    Content="CANCELAR"
                    Margin="0,0,10,0"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"/>

                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                    Background="#FF1E3A5F"
                    Foreground="White"
                    Content="SIM, SAIR"
                    Click="SairConfirmaBtn_Click"/>
                    </StackPanel>

                </StackPanel>
            </materialDesign:DialogHost.DialogContent>

            <Grid>

                <Image Source="/src/imagem_tcc.png" 
                       Stretch="UniformToFill" 
                       Opacity="0.8">

                    <Image.Effect>

                        <BlurEffect Radius="15"/>

                    </Image.Effect>

                </Image>

                <Frame x:Name="MainFrame" 
                       NavigationUIVisibility="Hidden" 
                       Margin="0,50,0,0" />

                <ToggleButton Style="{StaticResource MaterialDesignHamburgerToggleButton}" 
                              VerticalAlignment="Top" 
                              HorizontalAlignment="Left" 
                              Margin="10,10,0,0" 
                              Foreground="White" 
                              IsChecked="{Binding IsLeftDrawerOpen, ElementName=MainDrawerHost}"/>

                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center"
                            Margin="0,18,0,0">


                    <materialDesign:PackIcon Kind="AccountCircle"
                                             Foreground="White"
                                             FontSize="22"
                                             Width="30"
                                             Height="30"
                                             VerticalAlignment="Center"
                                             Margin="0,0,10,0"/>


                    <TextBlock x:Name="txtUsuarioNome"
                               Text="---"
                               Foreground="White"
                               FontSize="22"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Grid Margin="80,100,80,40">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            Background="#AA000000"
                            CornerRadius="20"
                            Padding="30,20,30,20"
                            Margin="308,0,0,20"
                            Effect="{StaticResource MaterialDesignShadowDepth4}">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                                <materialDesign:PackIcon Kind="Login" Width="30" Height="30" Foreground="#4CAF50" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                <TextBlock Text="Últimas Entradas" FontSize="26" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                            </StackPanel>

                            <Grid Grid.Row="1" Margin="10,0,20,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1.5*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="NOME DO MORADOR" Foreground="#888888" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Grid.Column="1" Text="BLOCO / APT" Foreground="#888888" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Grid.Column="2" Text="DATA E HORA" Foreground="#888888" FontWeight="Bold" FontSize="14" HorizontalAlignment="Right"/>
                            </Grid>

                            <Separator Grid.Row="2" Background="#44FFFFFF" Margin="0,0,0,10"/>

                            <ListView x:Name="LvEntradas"
                                      Grid.Row="3"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Foreground="White"
                                      HorizontalContentAlignment="Stretch"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#1AFFFFFF" BorderThickness="0,0,0,1" Padding="0,12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*" />
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="1.5*" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="{Binding Nome}" FontWeight="SemiBold" FontSize="18" Foreground="White" VerticalAlignment="Center"/>

                                                <TextBlock Grid.Column="1" Text="{Binding BlocoApt}" Foreground="#CCCCCC" FontSize="16" VerticalAlignment="Center"/>

                                                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                                                    <materialDesign:PackIcon Kind="ClockOutline" Foreground="LightGray" Width="18" Height="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding DataHora}" Foreground="LightGray" FontSize="16" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Border>

                    <Border Grid.Row="1"
                            Background="#AA000000"
                            CornerRadius="20"
                            Padding="30,20,30,20"
                            Margin="308,0,0,20" 
                            Effect="{StaticResource MaterialDesignShadowDepth4}">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                                <materialDesign:PackIcon Kind="Logout" Width="30" Height="30" Foreground="#F44336" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                <TextBlock Text="Últimas Saídas" FontSize="26" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                            </StackPanel>

                            <Grid Grid.Row="1" Margin="10,0,20,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1.5*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="NOME DO MORADOR" Foreground="#888888" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Grid.Column="1" Text="BLOCO / APT" Foreground="#888888" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Grid.Column="2" Text="DATA E HORA" Foreground="#888888" FontWeight="Bold" FontSize="14" HorizontalAlignment="Right"/>
                            </Grid>

                            <Separator Grid.Row="2" Background="#44FFFFFF" Margin="0,0,0,10"/>

                            <ListView x:Name="LvSaidas"
                                      Grid.Row="3"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Foreground="White"
                                      HorizontalContentAlignment="Stretch"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#1AFFFFFF" BorderThickness="0,0,0,1" Padding="0,12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*" />
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="1.5*" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="{Binding Nome}" FontWeight="SemiBold" FontSize="18" Foreground="White" VerticalAlignment="Center"/>

                                                <TextBlock Grid.Column="1" Text="{Binding BlocoApt}" Foreground="#CCCCCC" FontSize="16" VerticalAlignment="Center"/>

                                                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                                                    <materialDesign:PackIcon Kind="ClockOutline" Foreground="LightGray" Width="18" Height="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding DataHora}" Foreground="LightGray" FontSize="16" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Border>
                </Grid>
                <Border x:Name="AlertNaoAutorizado"
                        Background="#CCB71C1C"
                        CornerRadius="6"
                        Padding="12"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="0,80,0,0"
                        Visibility="Collapsed"
                        Effect="{StaticResource MaterialDesignShadowDepth2}">

                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="AlertCircle"
                                 Foreground="White"
                                 Width="24"
                                 Height="24"
                                 Margin="0,0,8,0"/>

                        <TextBlock Text="Digital não cadastrada"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>


            </Grid>

        </materialDesign:DialogHost>

    </materialDesign:DrawerHost>

</Window>