<Window x:Class="wpf_exemplo.GenReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Relatórios"
        Height="720"
        Width="1280"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="Black">

    <Grid>

        <Image Source="/src/imagem_tcc.png"
               Stretch="UniformToFill"
               Opacity="0.85">
            <Image.Effect>
                <BlurEffect Radius="15"/>
            </Image.Effect>
        </Image>

        <Button HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="20"
                Style="{StaticResource MaterialDesignIconButton}"
                Foreground="White"
                ToolTip="Voltar"
                Click="BtnVoltar_Click">
            <materialDesign:PackIcon Kind="ArrowLeft"
                                     Width="30"
                                     Height="30"/>
        </Button>

        <TextBlock Text="Gerar Relatórios"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,30,0,0"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="White"/>

        <Border Background="#AA000000"
                CornerRadius="30"
                Width="600"
                Height="550"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Effect="{StaticResource MaterialDesignShadowDepth4}">

            <StackPanel Margin="50">

                <materialDesign:PackIcon Kind="FileChart" 
                                         Width="50" Height="50" 
                                         Foreground="White" 
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,20"/>

                <TextBlock Text="Selecione os filtros abaixo:"
                           Foreground="White"
                           FontSize="16"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"
                           Opacity="0.8"/>

                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <DatePicker x:Name="DtInicio"
                                Grid.Column="0"
                                materialDesign:HintAssist.Hint="Data Início"
                                materialDesign:HintAssist.Foreground="White"
                                Foreground="White"
                                Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>

                    <DatePicker x:Name="DtFim"
                                Grid.Column="2"
                                materialDesign:HintAssist.Hint="Data Fim"
                                materialDesign:HintAssist.Foreground="White"
                                Foreground="White"
                                Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
                </Grid>

                <ComboBox x:Name="CmbTipoRelatorio"
                          materialDesign:HintAssist.Hint="Tipo de Relatório"
                          materialDesign:HintAssist.Foreground="White"
                          Foreground="White"
                          Margin="0,15,0,0"
                          Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                    <ComboBoxItem Content="Lista de Moradores (Geral)"/>
                    <ComboBoxItem Content="Acessos por Período"/>
                    <ComboBoxItem Content="Ocorrências / Multas"/>
                    <ComboBoxItem Content="Reservas de Áreas Comuns"/>
                </ComboBox>

                

                <CheckBox Content="Exportar direto para PDF"
                          IsChecked="True"
                          Foreground="White"
                          Margin="0,30,0,0"/>

                <Button Content="GERAR RELATÓRIO"
                        Margin="0,40,0,0"
                        Height="50"
                        FontSize="16"
                        FontWeight="Bold"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="25"
                        Click="BtnGerarRelatorio_Click"/>

            </StackPanel>
        </Border>
        <materialDesign:Snackbar 
            x:Name="MainSnackbar" 
            MessageQueue="{materialDesign:MessageQueue}"
            HorizontalAlignment="Center" 
            VerticalAlignment="Bottom"
            Margin="0,0,0,30" 
            Panel.ZIndex="100"/>
    </Grid>
</Window>