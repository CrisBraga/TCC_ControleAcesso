<Window x:Class="wpf_exemplo.EsqueceuSenhaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Redefinir Senha" Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="#AA000000">

    <Grid>
        <StackPanel Margin="40">

            <TextBlock Text="Recuperação de Senha"
                       Foreground="#FF1E3A5F"
                       FontSize="22"
                       HorizontalAlignment="Center"
                       FontWeight="Bold"
                       Margin="0,0,0,30"/>

            <TextBox x:Name="txtUsuario"
                     materialDesign:HintAssist.Hint="Usuário"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     Foreground="White"
                     Margin="0,0,0,15"/>

            <TextBox x:Name="txtEmail"
                     materialDesign:HintAssist.Hint="E-mail Cadastrado"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     Foreground="White"
                     Margin="0,0,0,30"/>

            <PasswordBox x:Name="txtNovaSenha"
                         materialDesign:HintAssist.Hint="Nova Senha"
                         Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                         Foreground="White"
                         Margin="0,0,0,15"/>

            <PasswordBox x:Name="txtConfirmarSenha"
                         materialDesign:HintAssist.Hint="Confirmar Nova Senha"
                         Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                         Foreground="White"
                         Margin="0,0,0,30"/>

            <Button Content="DEFINIR NOVA SENHA"
                    Click="BtnRedefinir_Click"
                    Background="{DynamicResource MaterialDesignAccent}"
                    Foreground="White"
                    Margin="0,0,0,10"/>

            <Button Content="CANCELAR"
                    Click="BtnCancelar_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Foreground="White"
                    BorderBrush="White"/>

            <materialDesign:Snackbar x:Name="MySnackbar" MessageQueue="{materialDesign:MessageQueue}" />
        </StackPanel>
    </Grid>
</Window>