<Window x:Class="wpf_exemplo.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Criar Conta" Height="760" Width="1280"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="Black">

    <Grid>
        <Image Source="/src/imagem_tcc.png" Stretch="UniformToFill" Opacity="0.8">
            <Image.Effect>
                <BlurEffect Radius="15"/>
            </Image.Effect>
        </Image>

        <Border Background="#AA000000" CornerRadius="30" Width="500" Height="650" 
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Effect="{StaticResource MaterialDesignShadowDepth3}">

            <StackPanel Margin="40" VerticalAlignment="Center">

                <materialDesign:PackIcon Kind="AccountPlus" 
                                         Width="60" Height="60"
                                         HorizontalAlignment="Center"
                                         Foreground="#FF1E3A5F"
                                         Margin="0,0,0,10"/>

                <TextBlock Text="Novo Porteiro" 
                           FontSize="26" FontWeight="Bold" 
                           Foreground="#FF1E3A5F" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,30"/>

                <TextBox x:Name="txtNome"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Hint="Nome Completo"
                         FontSize="16" Foreground="White"
                         Margin="0,0,0,15"/>

                <TextBox x:Name="txtEmail"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Hint="E-mail"
                         FontSize="16" Foreground="White"
                         Margin="0,0,0,15"/>

                <TextBox x:Name="txtUsuario"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Hint="Usuario (Login)"
                         FontSize="16" Foreground="White"
                         Margin="0,0,0,15"/>

                <PasswordBox x:Name="txtSenha"
                             Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                             materialDesign:HintAssist.Hint="Senha"
                             FontSize="16" Foreground="White"
                             Margin="0,0,0,15"/>

                <PasswordBox x:Name="txtConfirmarSenha"
                             Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                             materialDesign:HintAssist.Hint="Confirmar Senha"
                             FontSize="16" Foreground="White"
                             Margin="0,0,0,30"/>

                <Button Content="CADASTRAR" Height="45"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="18"
                        Background="#FF1E3A5F" BorderBrush="#FF1E3A5F"
                        IsDefault="True"
                        Click="btn_register"/>

                <Button Content="Cancelar" 
                        Height="30"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Margin="0,15,0,0"
                        Foreground="Gray"
                        Click="btn_cancel"/>

            </StackPanel>
        </Border>

        <materialDesign:Snackbar x:Name="msgRegistro"
                                 MessageQueue="{materialDesign:MessageQueue}"
                                 HorizontalAlignment="Center" VerticalAlignment="Bottom"
                                 Background="#FF1E3A5F" Foreground="White"
                                 FontSize="18" Margin="0,0,0,30"/>

        <materialDesign:Snackbar x:Name="msgErroRegistro"
                                 MessageQueue="{materialDesign:MessageQueue}"
                                 HorizontalAlignment="Center" VerticalAlignment="Bottom"
                                 Background="#D32F2F" Foreground="White"
                                 FontSize="18" Margin="0,0,0,80"/>

    </Grid>
</Window>