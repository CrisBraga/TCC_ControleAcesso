<Window x:Class="wpf_exemplo.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Cadastrar Usuario" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="Black">


    <Grid>
        
        <Image Source="/src/imagem_tcc.png" 
               Stretch="UniformToFill" 
               Opacity="0.8">
            
            <Image.Effect>
                
                <BlurEffect Radius="15"/>
                
            </Image.Effect>
            
        </Image>
        
        <Border Background="#AA000000" 
                CornerRadius="20" 
                Width="500"
                Height="600" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Effect="{StaticResource MaterialDesignShadowDepth3}">

            <StackPanel Margin="40" 
                        VerticalAlignment="Center">

                <materialDesign:PackIcon Kind="AccountPlus" 
                                         Width="60" 
                                         Height="60" 
                                         HorizontalAlignment="Center" 
                                         Foreground="#FF1E3A5F" 
                                         Margin="0,0,0,10"/>

                <TextBlock Text="Novo Usuario" 
                           FontSize="26" 
                           FontWeight="Bold" 
                           Foreground="#FF1E3A5F" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,30"/>

                <TextBox x:Name="txtUsuario"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Hint="Usuario"
                         FontSize="16"
                         Height="50"
                         Foreground="White"
                         Margin="0,0,0,20"/>

                <PasswordBox x:Name="txtSenha"
                             Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                             materialDesign:HintAssist.Hint="Senha"
                             FontSize="16"
                             Height="50"
                             Foreground="White"
                             Margin="0,0,0,20"/>

                <PasswordBox x:Name="txtConfirmarSenha"
                             Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                             materialDesign:HintAssist.Hint="Confirmar Senha"
                             FontSize="16"
                             Height="50"
                             Foreground="White"
                             Margin="0,0,0,40"/>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center">

                    <Button Content="SALVAR" 
                            Width="150" 
                            Height="45"
                            Margin="0,0,20,0"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="22"
                            Background="#FF1E3A5F" 
                            BorderBrush="#FF1E3A5F"
                            IsDefault="True"
                            Click="btn_register"/>

                    <Button Content="CANCELAR" 
                            Width="150" 
                            Height="45"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="22"
                            Background="#FF1E3A5F"
                            BorderBrush="#FF1E3A5F"
                            Click="btn_cancel"/>
                </StackPanel>

            </StackPanel>

        </Border>

        <materialDesign:Snackbar x:Name="RegisterSnackbar"
                                 MessageQueue="{materialDesign:MessageQueue}"
                                 Background="#AA000000"
                                 Foreground="White"/>
    </Grid>
    
</Window>